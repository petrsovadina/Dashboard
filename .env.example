# Azure Authentication (Required)
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here

# Azure Configuration
AZURE_RESOURCE_GROUP_NAME=your-resource-group
AZURE_REGION=westeurope

# Application Settings
NODE_ENV=production
PORT=3001
LOG_LEVEL=info

# Dashboard Configuration
AUTO_REFRESH_SECONDS=30
ENABLE_WEBSOCKET=true

# Security (generate API_KEY with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
API_KEY=your-32-character-api-key-minimum-32-characters
JWT_SECRET=your-64-character-jwt-secret-minimum-64-characters-for-security
IP_WHITELIST=127.0.0.1,192.168.1.0/24

# Network Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Development & Debugging
DEBUG=azure-dashboard:*